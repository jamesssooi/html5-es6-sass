{
  "name": "html5-es6-sass",
  "version": "1.0.0",
  "description": "",
  "main": "build/index.html",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build:html": "cp -r src/html/* build/",
    "build:css": "node-sass src/scss/main.scss build/styles.css",
    "build:js": "rollup -c",
    "build:assets": "cp -r public/* build/",
    "build": "npm run build:html & npm run build:css & npm run build:js & npm run build:assets",
    "watch:html": "onchange \"src/html/**/*.*\" -- npm run build:html",
    "watch:css": "node-sass -w src/scss/main.scss build/styles.css",
    "watch:js": "rollup -c -w",
    "watch:assets": "onchange \"public/**/*.*\" -- npm run build:assets",
    "watch": "concurrently -k \"npm run watch:html\" \"npm run watch:css\" \"npm run watch:js\" \"npm run watch:assets\"",
    "dev": "concurrently -k \"node live-server.js\" \"npm run watch:html\" \"npm run watch:css\" \"npm run watch:js\" \"npm run watch:assets\"",
    "predist": "del-cli dist/**/*.*",
    "dist": "cp -r src/html/* dist/ && node-sass --output-style compressed src/scss/main.scss dist/styles.css && rollup -c --environment NODE_ENV:production && cp -r public/* dist/",
    "postdist": "postcss dist/styles.css -u autoprefixer -r --no-map"
  },
  "author": "James Ooi",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^7.0.1",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-preset-latest": "^6.24.1",
    "concurrently": "^3.4.0",
    "del-cli": "^1.0.0",
    "live-server": "^1.2.0",
    "ncp": "^2.0.0",
    "node-sass": "^4.5.2",
    "onchange": "^3.2.1",
    "postcss-cli": "^4.0.0",
    "rollup": "^0.41.6",
    "rollup-plugin-babel": "^2.7.1",
    "rollup-plugin-commonjs": "^8.0.2",
    "rollup-plugin-node-resolve": "^3.0.0",
    "rollup-plugin-uglify": "^1.0.2",
    "rollup-watch": "^3.2.2"
  },
  "dependencies": {}
}
